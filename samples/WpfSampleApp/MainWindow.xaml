<Window x:Class="LicenseManagement.Sample.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Management Sample" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="License Management Sample App" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Demonstrates license validation and UI integration" Foreground="Gray"/>
        </StackPanel>

        <!-- License Status -->
        <GroupBox Grid.Row="1" Header="License Status" Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="StatusText" Text="Checking..." Margin="0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Product:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ProductText" Text="-" Margin="0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Expires:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ExpiresText" Text="-" Margin="0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Computer:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ComputerText" Text="-" Margin="0,5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Receipt:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="ReceiptText" Text="-" Margin="0,5"/>
            </Grid>
        </GroupBox>

        <!-- Feature Access Demo -->
        <GroupBox Grid.Row="2" Header="Feature Access (Based on License)">
            <StackPanel Margin="10">
                <CheckBox x:Name="BasicFeature" Content="Basic Feature" IsEnabled="False" Margin="0,5"/>
                <CheckBox x:Name="ProFeature" Content="Pro Feature (requires valid license)" IsEnabled="False" Margin="0,5"/>
                <CheckBox x:Name="TrialFeature" Content="Trial Feature (available during trial)" IsEnabled="False" Margin="0,5"/>

                <TextBlock x:Name="FeatureMessage" TextWrapping="Wrap" Margin="0,20,0,0" Foreground="Gray"/>
            </StackPanel>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="RefreshButton" Content="Refresh License" Width="120" Margin="0,0,10,0" Click="RefreshButton_Click"/>
            <Button x:Name="ManageLicenseButton" Content="Manage License" Width="120" Click="ManageLicenseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
